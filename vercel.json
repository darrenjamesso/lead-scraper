{
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/server/server.js"
        },
        {
            "source": "/:path*",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "server/server.js": {
            "runtime": "nodejs20.x"
        }
    }
}